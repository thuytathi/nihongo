<% provide(:title, 'Sign up') %>
<div class:"row">
  <div class="col-md-6 col-md-offset-3"> 
    <h1>Sign up</h1>
    <%= form_for @user,:html => { :multipart => true } do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :Name %>
      <%= f.text_field :name, class: 'form-control' %><br>
      <%= f.label :Sex %>
      <%= f.select :sex, ['male', 'female'] %> <br> <br>
      <%= f.label :Birthday %> <br>
      <%= f.date_select(:birthday ,:start_year => 1940) %><br><br>
      <%= f.label :Email %>
      <%= f.email_field :email, class: 'form-control' %><br>
      <%= f.label :Password %>
      <%= f.password_field :password, class: 'form-control' %><br>
      <%= f.label :Password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br>
      <%= f.label :Avatar %>
      <%= f.file_field :avatar %> <br>        
      <%= f.submit "Create my account", class: "btn btn-primary col-md-offset-3" %><br>
    <% end %>
  </div>
  <div class="col-md-6"></div>
</div>
